// Approach - 1: Right-to-Left Scan with Dynamic Removal (ArrayList-based Trimming)
// T.C - O(nÂ²)
// S.C - O(n)



class Solution {
    public String largestEven(String s) {
        int n = s.length();
        if(s.charAt(n-1)=='2'){
            return s;
        }
        List<Character> li = new ArrayList<>();
        for(int i=0;i<s.length();i++){
            li.add(s.charAt(i));
        }
        int i = li.size()-1;
        while(i>=0){
            if(li.get(i) == '2'){
                break;
            }
            li.remove(i);
            i--;
        }
        if(li.size()==0){
            return "";
        }
        StringBuilder sb = new StringBuilder();
        for(char ch:li){
            sb.append(ch);
        }
        return sb.toString();
    }
}



// Approach - 2: Rightmost Even Digit Index Tracking (Greedy String Scan)
// T.C - O(n)
// S.C - O(1)


class Solution {
    public String largestEven(String s) {
        int n = s.length();
        for(int i=n-1;i>=0;i--){
            int digit = s.charAt(i) - '0';
            if(digit%2==0){
                return s.substring(0,i+1);
            }
        }
        return "";
    }
}
