// Approach - 1 Linear Scan with Restart (Brute Force Iterative Doubling)
// T.C - O(nÂ²)
// S.C - O(1)

class Solution {
    public int findFinalValue(int[] nums, int original) {
        int i = 0;
        // Loop through nums repeatedly until no match for 'original' is found
        while (i < nums.length) {
            // If we find original in the array
            if (nums[i] == original) {
                original *= 2;  // double it
                i = 0;          // restart scanning from the beginning
            } 
            else {
                i++;            // otherwise move to next element
            }
        }
        return original;  // return final computed value
    }
}



// Approach - 2 Using Frequency Array (Optimized Lookup)
// T.C - O(n)
// S.C - O(1)



class Solution {
    public int findFinalValue(int[] nums, int original) {
        // Frequency array to mark presence of numbers (0 to 1000)
        int[] arr = new int[1001];
        // Mark all numbers present in nums
        for(int num : nums) {
            if(num <= 1000) {
                arr[num]++;
            }
        }
        // While the current 'original' exists in the array, keep doubling it
        while(original <= 1000 && arr[original] != 0) {
            original *= 2;
        }
        // Return the final value after doubling stops
        return original;
    }
}
