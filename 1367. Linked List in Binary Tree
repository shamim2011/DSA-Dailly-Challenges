//Approach - DFS + Backtracking (Tree Traversal with Path Matching)
//T.C : O(n+m)       M = length of linked list (during matching)
//S.C : O(n+m)


/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */

class Solution {

    // This function checks whether the linked list starting from `head`
    // matches a downward path starting from the current tree `root`
    boolean check(ListNode head, TreeNode root) {

        // If we have matched all nodes of the linked list
        // then a valid path exists
        if (head == null) return true;

        // If tree node becomes null before list ends
        // then matching is not possible
        if (root == null) return false;

        // If current values do not match
        if (head.val != root.val) return false;

        // Try to match the next list node
        // either in left subtree or right subtree
        return check(head.next, root.left) ||
               check(head.next, root.right);
    }

    public boolean isSubPath(ListNode head, TreeNode root) {

        // If tree is empty, linked list cannot be a subpath
        if (root == null) return false;

        // Check from current root
        // OR try from left subtree
        // OR try from right subtree
        return check(head, root) ||
               isSubPath(head, root.left) ||
               isSubPath(head, root.right);
    }
}
