// Approach - Level Order Traversal (BFS) using Queue
// T.c - O(n)
// S.C - O(n)



/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean isCompleteTree(TreeNode root) {

        // Queue for level order traversal
        Queue<TreeNode> q = new LinkedList<>();

        // Start BFS from root
        q.add(root);

        // Flag to indicate that a null node has been encountered
        boolean isValid = false;

        while (!q.isEmpty()) {

            // Get current node from queue
            TreeNode curr = q.poll();

            // If current node is null
            if (curr == null) {
                // Once a null is seen, all following nodes must be null
                isValid = true;
            } else {

                // If a non-null node appears after a null â†’ not a complete tree
                if (isValid) return false;

                // Add left and right children of current node
                q.add(curr.left);
                q.add(curr.right);
            }
        }

        // If no rule was violated, tree is complete
        return true;
    }
}


// Approach 2 - Index-Based Depth First Search (DFS) Approach
// T.c - O(n)
// S.C - O(h)


/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    // Function to count total number of nodes in the binary tree
    int countNode(TreeNode root) {
        // If tree is empty, return 0
        if (root == null) return 0;

        // Count current node + left subtree nodes + right subtree nodes
        return 1 + countNode(root.left) + countNode(root.right);
    }

    // DFS function to check completeness using index-based logic
    boolean dfs(TreeNode root, int i, int n) {

        // If node is null, it does not violate completeness
        if (root == null) return true;

        // If index exceeds total nodes, tree is not complete
        if (i > n) {
            return false;
        }

        // Recursively check left and right subtrees
        // Left child index = 2 * i
        // Right child index = 2 * i + 1
        return dfs(root.left, 2 * i, n) 
            && dfs(root.right, 2 * i + 1, n);
    }

    // Main function to check if the binary tree is complete
    public boolean isCompleteTree(TreeNode root) {

        // Step 1: Count total nodes in the tree
        int totalNodes = countNode(root);

        // Root index starts from 1
        int i = 1;

        // Step 2: Verify completeness using DFS
        return dfs(root, i, totalNodes);
    }
}
