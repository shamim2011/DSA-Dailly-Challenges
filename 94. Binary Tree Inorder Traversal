// T.C - O(n)
// S.C - O(n)
Given the root of a binary tree, return the inorder traversal of its nodes' values.
xample 1:

Input: root = [1,null,2,3]

Output: [1,3,2]

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> inorderTraversal(TreeNode root) {
        Stack<TreeNode> st=new Stack<>();
        List<Integer> inorder=new ArrayList<>();
        TreeNode node=root;
        while(true){
            if(node !=null){
                st.push(node);
                node=node.left;
            }
            else{
                if(st.isEmpty()){
                    break;
                }
                node=st.pop();
                inorder.add(node.val);
                node=node.right;
            }
        }
        return inorder;
    }
}




------------------------------------------------
// Approach - Depth-First Search (DFS) â€“ Recursive Inorder Traversal
// T.C - O(n)
// S.C - O(n)



/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> inorderTraversal(TreeNode root) {
        List<Integer> ans = new ArrayList<>();
        dfs(root,ans);
        return ans;
    }

    void dfs(TreeNode root,List<Integer> ans){
        if(root == null) return;
        dfs(root.left,ans);
        ans.add(root.val);
        dfs(root.right,ans);
    }
}

-------------------------------------------------------------------------------------------------------

// Approach - Morris Traversal
// T.C - O(n)
// S.C - O(1)



/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> inorderTraversal(TreeNode root) {

        // List to store inorder traversal result
        List<Integer> inorder = new ArrayList<>();

        // Start traversal from root
        TreeNode curr = root;

        // Iterate until all nodes are processed
        while (curr != null) {

            // Case 1: If left child is null, visit current node
            if (curr.left == null) {
                inorder.add(curr.val);      // Add current node value
                curr = curr.right;          // Move to right subtree
            }
            else {
                // Find the rightmost node in left subtree (inorder predecessor)
                TreeNode leftChild = curr.left;
                while (leftChild.right != null) {
                    leftChild = leftChild.right;
                }

                // Create a temporary link (thread) back to current node
                leftChild.right = curr;

                // Store current node temporarily
                TreeNode temp = curr;

                // Move current to its left child
                curr = curr.left;

                // Break the original left link to avoid infinite loop
                temp.left = null;
            }
        }

        // Return inorder traversal result
        return inorder;
    }
}

