// Approach 1 - Greedy Approach (Sorting + Accumulation)
// T.C - O(n+m*logm)         n=length of Apple array, m = length of capacity
// S.C - O(1)


class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {

        // Variable to store the total number of apples
        int sum = 0;

        // Sort the capacity array in ascending order
        Arrays.sort(capacity);

        // Calculate the total number of apples
        for (int num : apple) {
            sum += num;
        }

        // Count of boxes used
        int count = 0;

        // Variable to keep track of total capacity used so far
        int breakSum = 0;

        // Traverse the capacity array from the largest capacity
        for (int i = capacity.length - 1; i >= 0; i--) {

            // Add the current box capacity
            breakSum += capacity[i];

            // Increment the number of boxes used
            count++;

            // If total capacity is enough to hold all apples, stop
            if (breakSum >= sum) {
                break;
            }
        }

        // Return the minimum number of boxes required
        return count;
    }
}



// Approach 2- (Using counting sort so that we can simply assign the apples to largest boxes first)
// T.C - O(n+m)         n=length of Apple array, m = length of capacity
// S.C - O(1)


class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {

        // Variable to store the total number of apples
        int totalApple = 0;

        // Calculate the total apples
        for (int num : apple) {
            totalApple += num;
        }

        // Frequency array to store how many boxes exist
        // for each capacity (1 to 50)
        int[] freq = new int[51];

        // Fill the frequency array based on capacity values
        for (int num : capacity) {
            freq[num]++;
        }

        // Count of boxes used
        int count = 0;

        // Traverse capacities from highest to lowest (greedy choice)
        for (int i = 50; i >= 1 && totalApple > 0; i--) {

            // Use boxes of current capacity while available
            // and while apples are still left
            while (freq[i] > 0 && totalApple > 0) {

                // Place apples into the current box
                totalApple -= i;

                // Reduce the frequency of this capacity
                freq[i]--;

                // Increment the number of boxes used
                count++;
            }
        }

        // Return the minimum number of boxes required
        return count;
    }
}

