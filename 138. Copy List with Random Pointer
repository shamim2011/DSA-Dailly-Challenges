// Approach 1 - HashMap (Two-Pass Deep Copy Approach)
// T.C - O(n)
// S.C - O(n)


/*
// Definition for a Node.
class Node {
    int val;
    Node next;
    Node random;

    public Node(int val) {
        this.val = val;
        this.next = null;
        this.random = null;
    }
}
*/

class Solution {
    public Node copyRandomList(Node head) {
        // Edge case: if original list is empty
        if(head == null) return null;

        // HashMap to map original nodes -> copied nodes
        Map<Node, Node> mp = new HashMap<>();

        Node curr = head;      // Pointer to traverse original list
        Node prev = null;      // Pointer to build copied list
        Node newHead = null;   // Head of copied list

        // First pass: create copy of each node (only val & next)
        while(curr != null) {
            // Create new node with same value
            Node temp = new Node(curr.val);

            // Store mapping from original node to copied node
            mp.put(curr, temp);

            // Set head of copied list
            if(newHead == null) {
                newHead = temp;
                prev = newHead;
            } else {
                // Link copied nodes using next pointer
                prev.next = temp;
                prev = temp;
            }
            curr = curr.next;
        }

        // Second pass: assign random pointers
        curr = head;
        Node newCurr = newHead;

        while(curr != null) {
            // If original random is null, copied random is also null
            if(curr.random == null) {
                newCurr.random = null;
            } else {
                // Get copied node of original random using map
                newCurr.random = mp.get(curr.random);
            }
            curr = curr.next;
            newCurr = newCurr.next;
        }

        // Return head of deep-copied list
        return newHead;
    }
}



// Approach 2 - Interweaving / In-place Deep Copy (Without HashMap)
// T.C - O(n)
// S.C - O(1)


/*
// Definition for a Node.
class Node {
    int val;
    Node next;
    Node random;

    public Node(int val) {
        this.val = val;
        this.next = null;
        this.random = null;
    }
}
*/

class Solution {
    public Node copyRandomList(Node head) {
        if (head == null) return null;

        // STEP 1: Insert copied nodes in between original nodes
        // A -> B -> C
        // A -> A' -> B -> B' -> C -> C'
        Node curr = head;
        while (curr != null) {
            Node currNext = curr.next;          // store next original node
            curr.next = new Node(curr.val);     // create copied node
            curr.next.next = currNext;          // link copied node to next original
            curr = currNext;
        }

        // STEP 2: Copy random pointers for copied nodes
        curr = head;
        while (curr != null && curr.next != null) {
            if (curr.random == null) {
                curr.next.random = null;
            } else {
                curr.next.random = curr.random.next;
            }
            curr = curr.next.next; // move to next original node
        }

        // STEP 3: Separate the original and copied linked lists
        Node newHead = head.next;
        Node newCurr = newHead;
        curr = head;

        while (curr != null && newCurr != null) {
            curr.next = (curr.next == null) ? null : curr.next.next;
            newCurr.next = (newCurr.next == null) ? null : newCurr.next.next;
            curr = curr.next;
            newCurr = newCurr.next;
        }

        return newHead;
    }
}
