// Approach 1 -  Array / Two Pointer Approach
// T.C - O(n)
// S.C - O(n)



/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
class Solution {
    public boolean isPalindrome(ListNode head) {

        // Step 1: Create a list to store linked list values
        List<Integer> li = new ArrayList<>();

        // Step 2: Traverse the linked list and add values to list
        ListNode temp = head;
        while (temp != null) {
            li.add(temp.val);
            temp = temp.next;
        }

        // Step 3: Use two pointers to compare values from start and end
        int i = 0;
        int j = li.size() - 1;

        while (i < j) {
            // If values do not match, it's not a palindrome
            if (li.get(i) != li.get(j)) {
                return false;
            }
            i++;
            j--;
        }

        // Step 4: If all values match, it is a palindrome
        return true;
    }
}



// Approach 2 -  Two Pointers + Reverse Second Half
// T.C - O(n)
// S.C - O(1)



class Solution {

    // Function to reverse a linked list
    ListNode reverseLL(ListNode head){
        // Base case: empty list or single node
        if(head == null || head.next == null) return head;

        ListNode nextNode = null; // stores next node
        ListNode curr = head;     // current node
        ListNode prev = null;     // previous node

        // Reverse the linked list iteratively
        while(curr != null){
            nextNode = curr.next; // save next node
            curr.next = prev;     // reverse pointer
            prev = curr;          // move prev forward
            curr = nextNode;      // move curr forward
        }
        // prev becomes new head after reversal
        return prev;
    }

    public boolean isPalindrome(ListNode head) {
        // If list has 0 or 1 node, it's always a palindrome
        if(head == null || head.next == null) return true;

        ListNode slow = head;
        ListNode fast = head;
        ListNode prev = null;

        // Find the middle of the linked list
        while(fast != null && fast.next != null){
            prev = slow;
            slow = slow.next;
            fast = fast.next.next;
        }

        // Reverse the second half of the list
        ListNode revHead = reverseLL(slow);

        // Break the list into two halves
        prev.next = null;

        // Compare first half and reversed second half
        while(revHead != null && head != null){
            if(revHead.val != head.val) return false;
            revHead = revHead.next;
            head = head.next;
        }

        return true;
    }
}



// Approach 3 -  Two Pointers + In-place Reversal
// T.C - O(n)
// S.C - O(1)



class Solution {
    public boolean isPalindrome(ListNode head) {

        // If the list has 0 or 1 node, it is always a palindrome
        if (head == null || head.next == null) return true;

        // slow -> moves one step
        // fast -> moves two steps
        // prev -> used to reverse the first half
        ListNode slow = head;
        ListNode fast = head;
        ListNode prev = null;

        // Find the middle of the linked list
        // At the same time, reverse the first half
        while (fast != null && fast.next != null) {
            fast = fast.next.next;

            // Reverse the link for slow pointer
            ListNode nextNode = slow.next;
            slow.next = prev;
            prev = slow;
            slow = nextNode;
        }

        // If the number of nodes is odd,
        // skip the middle node
        if (fast != null) {
            slow = slow.next;
        }

        // Compare the reversed first half (prev)
        // with the second half (slow)
        while (prev != null && slow != null) {
            if (prev.val != slow.val) return false;
            prev = prev.next;
            slow = slow.next;
        }

        // If all values matched
        return true;
    }
}



// Approach 4 -  
// T.C - O(n)
// S.C - O(1)
