// Approach 1- Hash Map Frequency Counting
// T.C - O(n)
// S.C - O(n)


class Solution {
    public int repeatedNTimes(int[] nums) {

        // The repeated number appears exactly n times
        int n = nums.length / 2;

        // HashMap to store frequency of each number
        Map<Integer, Integer> mp = new HashMap<>();

        // Count frequency of each number
        for (int num : nums) {
            mp.put(num, mp.getOrDefault(num, 0) + 1);
        }

        int ans = 0;

        // Find the number whose frequency is exactly n
        for (Map.Entry<Integer, Integer> entry : mp.entrySet()) {
            if (entry.getValue() == n) {
                ans = entry.getKey();
            }
        }

        // Return the repeated number
        return ans;
    }
}




// Approach 2- Frequency Array Counting
// T.C - O(n)
// S.C - O(1)


class Solution {
    public int repeatedNTimes(int[] nums) {

        int n = nums.length / 2;

        // Frequency array (0 <= nums[i] <= 10^4)
        int[] arr = new int[10000];

        // Count frequency of each number
        for (int num : nums) {
            arr[num]++;
            // Early exit if frequency becomes n
            if (arr[num] == n) {
                return num;
            }
        }

        return 0; // safety return
    }
}


// Approach 3- Neighbor Comparison / Pattern Observation
// T.C - O(n)
// S.C - O(1)


class Solution {
    public int repeatedNTimes(int[] nums) {

        for (int i = 2; i < nums.length; i++) {
            // Check last 2 and last 3 positions
            if (nums[i] == nums[i - 1] || nums[i] == nums[i - 2]) {
                return nums[i];
            }
        }

        // Edge case
        return nums[0];
    }
}
