// Approach - Simulation
// T.C - O(n)
// S.C - O(n)


class Solution {
    public int[] leftRightDifference(int[] nums) {
        int n = nums.length;
        int[] ans = new int[n];
        int[] left = new int[n];
        int[] right = new int[n];
        int lsum = 0;
        for(int i=0;i<n;i++){
            left[i] = lsum;
            lsum += nums[i];
        }
        int rsum = 0;
        for(int i=n-1;i>=0;i--){
            right[i] = rsum;
            rsum += nums[i];
        }
        for(int i=0;i<n;i++){
            ans[i] = Math.abs(left[i]-right[i]);
        }
        return ans;
    }
}
