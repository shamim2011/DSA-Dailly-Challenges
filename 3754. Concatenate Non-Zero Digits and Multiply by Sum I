// Approach - Digit Extraction + String Reversal Approach
// T.C - O(d)          where d = number of digits in n
// S.C - O(d)



class Solution {
    public long sumAndMultiply(int n) {
        
        long num = 0; // To store digits of 'n' (except zeroes) in reverse order during extraction
        long sum = 0; // To store sum of digits (excluding zero)

        // Step 1: Extract digits from right to left, ignore zeros
        while(n > 0){
            long digit = n % 10; // Get the last digit
            
            if(digit != 0){
                num = num * 10 + digit; // Form reversed number without zeros
                sum += digit;           // Add digit to sum
            }

            n /= 10; // Move to next digit
        }

        // Step 2: Reverse the number again (to restore original digit order)
        String s = Long.toString(num);
        char[] arr = s.toCharArray();
        
        int i = 0, j = s.length() - 1;
        while(i < j){
            char temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
            i++;
            j--;
        }
        
        // Convert reversed char array back to number
        String s1 = new String(arr);
        Long ans = Long.parseLong(s1);
        
        // Step 3: Multiply final number with sum of digits
        return (ans * sum);
    }
}
