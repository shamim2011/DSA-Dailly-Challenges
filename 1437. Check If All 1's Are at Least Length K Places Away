// Approach - 1 Single Scan (Linear Traversal) + Tracking Previous 1 Position
// T.C - O(n)
// S.C - O(1)

class Solution {
    public boolean kLengthApart(int[] nums, int k) {
        int n = nums.length;
        int curr = 0, prev = -1;
        for(int i=0;i<n;i++){
            if(nums[i]==1){
                prev = i;
                break;
            }
           
        }
        // For the no 1's found
        if(prev == -1) {
            return true;
        }
        for(int i=prev+1;i<n;i++){
            if(nums[i]==1){
                curr = i;
                if(curr-prev-1<k){
                    return false;
                }
                prev = i;
            }
        }
        return true;
    }
}
