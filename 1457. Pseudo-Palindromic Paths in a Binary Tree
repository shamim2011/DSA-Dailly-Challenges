//Approach 1 - DFS + Backtracking with Frequency Count
//T.C : O(n)
//S.C : O(h)



/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    // Stores the count of pseudo-palindromic root-to-leaf paths
    int ans = 0;

    public int pseudoPalindromicPaths(TreeNode root) {

        // Frequency array to store count of digits (1â€“9) along the path
        int[] temp = new int[10];

        // Start DFS traversal from root
        solve(root, temp);

        return ans;
    }

    void solve(TreeNode root, int[] temp) {

        // Base condition
        if (root != null) {

            // Include current node value in the frequency array
            temp[root.val]++;

            // If it is a leaf node
            if (root.left == null && root.right == null) {

                int oddFreq = 0;

                // Count how many digits appear odd number of times
                for (int i = 0; i <= 9; i++) {
                    if (temp[i] % 2 != 0) {
                        oddFreq++;
                    }
                }

                // Path is pseudo-palindromic if at most one digit has odd frequency
                ans += (oddFreq <= 1) ? 1 : 0;
            }

            // Recur for left and right subtrees
            solve(root.left, temp);
            solve(root.right, temp);

            // Backtrack: remove current node value from path
            temp[root.val]--;
        }
    }
}

-----------------------------------------------------------------


class Solution {
    int ans = 0;
    public int pseudoPalindromicPaths (TreeNode root) {
        int[] temp = new int[10];
        solve(root,temp);
        return ans;
    }
    void solve(TreeNode root,int[] temp){
        if(root==null) return;
        temp[root.val]++;
        
        if(root.left == null && root.right == null){
            int oddFreq = 0;
            for(int i=0;i<=9;i++){
                if(temp[i]%2!=0){
                    oddFreq++;
                }
            }
            ans += oddFreq<=1?1:0;
        }
        solve(root.left,temp);
        solve(root.right,temp);
        temp[root.val]--;
    }
}



//Approach 2 - DFS + Bitmasking (Parity Tracking)
//T.C : O(n)
//S.C : O(h)

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    // Stores the count of pseudo-palindromic paths
    int ans = 0;

    // Main function
    public int pseudoPalindromicPaths(TreeNode root) {
        // Start DFS with initial bitmask = 0
        solve(root, 0);
        return ans;
    }

    // DFS traversal
    void solve(TreeNode root, int temp) {

        // Base case
        if (root == null) return;

        // Toggle the bit corresponding to current node value
        temp = temp ^ (1 << root.val);

        // If it is a leaf node
        if (root.left == null && root.right == null) {

            // Check if at most one bit is set in temp
            // (means it can form a palindrome)
            if ((temp & (temp - 1)) == 0) {
                ans++;
            }
        }

        // Recurse for left and right subtrees
        solve(root.left, temp);
        solve(root.right, temp);
    }
}

