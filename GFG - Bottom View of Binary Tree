// Approach - Bottom View of Binary Tree
// T.C- O(N log N)
// S.c - O(N)


/*
class Node {
    int data;
    Node left;
    Node right;

    Node(int data) {
        this.data = data;
        left = null;
        right = null;
    }
}
*/

// Helper class to store node and its horizontal distance
class Pair {
    Node node;
    int level;   // horizontal distance

    public Pair(Node node, int level) {
        this.node = node;
        this.level = level;
    }
}

class Solution {
    public ArrayList<Integer> bottomView(Node root) {

        ArrayList<Integer> ans = new ArrayList<>();

        // If tree is empty
        if (root == null) return ans;

        // TreeMap keeps keys sorted (left to right)
        Map<Integer, Integer> mp = new TreeMap<>();

        // Queue for level order traversal
        Queue<Pair> q = new LinkedList<>();

        // Start with root at horizontal distance 0
        q.offer(new Pair(root, 0));

        while (!q.isEmpty()) {

            Pair p = q.remove();
            Node curr = p.node;
            int level = p.level;

            // Overwrite value for same horizontal distance
            // Ensures bottom-most node is stored
            mp.put(level, curr.data);

            // Left child -> horizontal distance - 1
            if (curr.left != null) {
                q.offer(new Pair(curr.left, level - 1));
            }

            // Right child -> horizontal distance + 1
            if (curr.right != null) {
                q.offer(new Pair(curr.right, level + 1));
            }
        }

        // Collect bottom view from leftmost to rightmost
        for (Map.Entry<Integer, Integer> entry : mp.entrySet()) {
            ans.add(entry.getValue());
        }

        return ans;
    }
}
