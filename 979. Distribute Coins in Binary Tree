//Approach-Post-Order DFS (Tree Balance / Excess Coin Propagation)
//T.C : O(n)
//S.C : O(h)



/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */

class Solution {

    // Returns net excess coins from this subtree
    int solve(TreeNode root, int[] ans) {

        // Base case: empty node contributes nothing
        if (root == null) return 0;

        // Post-order traversal
        int l = solve(root.left, ans);   // excess coins from left subtree
        int r = solve(root.right, ans);  // excess coins from right subtree

        // Moves required to balance left and right subtrees
        ans[0] += Math.abs(l) + Math.abs(r);

        // Current node keeps 1 coin
        // Remaining coins (positive or negative) passed to parent
        return (l + r + root.val) - 1;
    }

    public int distributeCoins(TreeNode root) {

        // Using array to pass answer by reference
        int[] ans = {0};

        solve(root, ans);

        return ans[0];
    }
}
