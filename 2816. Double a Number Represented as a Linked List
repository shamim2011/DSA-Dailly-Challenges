// Approach-1 (Using Reverse of LinkedList)
// T.C : O(n)
// S.C : O(n)



class Solution {

    // Function to reverse a singly linked list
    ListNode reverse(ListNode head){
        ListNode prev = null;      // Previous node (initially null)
        ListNode curr = head;      // Current node starts from head
        ListNode next = null;      // To store next node temporarily

        // Traverse the list and reverse pointers
        while(curr != null){
            next = curr.next;      // Store next node
            curr.next = prev;      // Reverse the link
            prev = curr;           // Move prev forward
            curr = next;           // Move curr forward
        }

        // prev becomes the new head after reversal
        return prev;
    }

    public ListNode doubleIt(ListNode head) {

        // Step 1: Reverse the linked list
        // Because multiplication starts from least significant digit
        head = reverse(head);

        ListNode curr = head;
        ListNode prev = null;
        int carry = 0;

        // Step 2: Traverse the reversed list and double each digit
        while(curr != null){
            int newVal = curr.val * 2 + carry;  // Double + previous carry
            curr.val = newVal % 10;             // Store unit digit
            
            // Update carry
            if(newVal >= 10){
                carry = 1;
            } else {
                carry = 0;
            }

            prev = curr;        // Track last processed node
            curr = curr.next;   // Move forward
        }

        // Step 3: If carry remains after full traversal,
        // add a new node at the end
        if(carry > 0){
            ListNode newHead = new ListNode(carry);
            prev.next = newHead;
        }

        // Step 4: Reverse again to restore original order
        return reverse(head);
    }
}


// Approach - 2 Recursive Backtracking (Postorder Traversal on Linked List)
// T.C : O(n)
// S.C : O(n)


class Solution {

    // Recursive function to double each digit
    // Returns carry generated after doubling
    int doubleUnit(ListNode head){
        
        // Base case: if node is null, no carry
        if(head == null) return 0;

        // Recursively go to the last node
        int carry = doubleUnit(head.next);

        // Double current node value and add carry from next node
        int newVal = head.val * 2 + carry;

        // Store the unit digit in current node
        head.val = newVal % 10;

        // Return carry (tens digit)
        return newVal / 10;
    }

    public ListNode doubleIt(ListNode head) {
        
        // Start recursion from head
        int lastCarry = doubleUnit(head);

        // If carry remains after processing first node
        if(lastCarry > 0){
            // Create new node at beginning
            ListNode newNode = new ListNode(lastCarry);
            newNode.next = head;
            return newNode;
        }
        
        return head;
    }
}

--------------------------------------  Using Stack -----------------------------------


class Solution {
    public ListNode doubleIt(ListNode head) {
        Stack<ListNode> st = new Stack<>();
        ListNode curr = head;

        // Push all nodes into stack
        while (curr != null) {
            st.push(curr);
            curr = curr.next;
        }
        int carry = 0;
        // Process from right to left
        while (!st.isEmpty()) {
            ListNode node = st.pop();
            int newVal = node.val * 2 + carry;
            node.val = newVal % 10;
            carry = newVal / 10;
        }
        // If carry still remains, add new head
        if (carry > 0) {
            ListNode newNode = new ListNode(carry);
            newNode.next = head;
            head = newNode;
        }
        return head;
    }
}


// Approach - 3 :  Single Traversal with Immediate Carry Handling (Forward Processing)
// T.C : O(n)
// S.C : O(1)



class Solution {
    public ListNode doubleIt(ListNode head) {
        
        // prev will keep track of previous node (needed for carry handling)
        ListNode prev = null;
        
        // curr is used to traverse the linked list
        ListNode curr = head;
        
        // Traverse the entire linked list
        while(curr != null){
            
            // Double the current node value
            int val = curr.val * 2;
            
            // If doubling does not produce carry
            if(val < 10){
                curr.val = val;  // Directly assign doubled value
            }
            
            // If carry is produced and previous node exists
            else if(prev != null){
                curr.val = val % 10;  // Keep only last digit
                prev.val += 1;        // Add carry to previous node
            }
            
            // If carry is produced and current node is head
            else{
                // Create new head node with carry value 1
                ListNode newHead = new ListNode(1);
                
                // Point new head to current node
                newHead.next = curr;
                
                // Update current node value
                curr.val = val % 10;
                
                // Update head reference
                head = newHead;
            }
            
            // Move prev and curr forward
            prev = curr;
            curr = curr.next;
        }
        
        // Return updated head
        return head;
    }
}



// Approach - 4 :  Left-to-Right Carry Prediction Approach
// T.C : O(n)
// S.C : O(1)



class Solution {
    public ListNode doubleIt(ListNode head) {
        
        // If the first digit is >= 5,
        // doubling it will generate a carry.
        // So we create a new head with value 0
        // to handle the carry properly.
        if(head.val >= 5){
            ListNode newHead = new ListNode(0);
            newHead.next = head;
            head = newHead;
        }

        ListNode curr = head;

        // Traverse the linked list
        while(curr != null){
            
            // Double the current digit
            // Keep only the last digit using %10
            curr.val = (curr.val * 2) % 10;

            // If next node exists and its value >= 5,
            // it means doubling next node will create a carry.
            // So add 1 to current node.
            if(curr.next != null && curr.next.val >= 5){
                curr.val += 1;
            }

            curr = curr.next;
        }

        return head;
    }
}

