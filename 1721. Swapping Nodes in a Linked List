// Approach 1 - Two-Pass Length Calculation Approach
// T.C - O(n)
// S.C - O(1)



/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
class Solution {
    public ListNode swapNodes(ListNode head, int k) {
        // If list is empty
        if(head == null) return null;

        // If list has only one node
        if(head.next == null) return head;

        // Step 1: Find length of the linked list
        int len = 0;
        ListNode temp = head;
        while(temp != null){
            len++;
            temp = temp.next;
        }

        // Step 2: Find kth node from the start
        ListNode node1 = head;
        int count = 1;
        while(node1 != null){
            if(count == k){
                break;
            }
            count++;
            node1 = node1.next;
        }

        // Step 3: Find kth node from the end (position = len - k + 1)
        ListNode node2 = head;
        int count1 = 1;
        while(node2 != null){
            if(count1 == len - k + 1){
                break;
            }
            count1++;
            node2 = node2.next;
        }

        // Step 4: Swap values of the two nodes
        int tempVal = node1.val;
        node1.val = node2.val;
        node2.val = tempVal;

        // Return modified list
        return head;
    }
}



// Approach 2 - Two-pointer traversal / Single-pass approach
// T.C - O(n)
// S.C - O(1)


/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */

class Solution {
    public ListNode swapNodes(ListNode head, int k) {
        // Edge case: empty list or single node, nothing to swap
        if(head == null) return null;
        if(head.next == null) return head;

        ListNode node1 = head;  // Will point to the k-th node from the start
        ListNode node2 = head;  // Will point to the k-th node from the end
        ListNode temp = head;   // Temporary pointer to traverse the list

        // Traverse the list
        while(temp != null){
            // Move node2 only after node1 is found
            if(node2 != null){
                node2 = node2.next;
            }

            k--;  // Count down to find k-th node
            if(k == 0){
                node1 = temp; // Found k-th node from start
                node2 = head; // Start node2 to find k-th from end
            }

            temp = temp.next; // Move forward
        }

        // Swap values of node1 (k-th from start) and node2 (k-th from end)
        int tempVal = node1.val;
        node1.val = node2.val;
        node2.val = tempVal;

        return head;
    }
}

