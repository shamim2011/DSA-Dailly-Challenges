// Approach 1 - Brute Force / Linear Scan
// T.C - O(m * n)     -> where m = number of rows in the grid, n = number of columns in the grid
// S.C - O(1)


class Solution {

    // Function to count total number of negative numbers in the grid
    public int countNegatives(int[][] grid) {

        // Variable to store the final count of negative numbers
        int ans = 0;

        // Traverse each row of the grid
        for (int[] arr : grid) {

            // Count negatives in the current row
            int count = countNegative(arr);

            // Add to the total count
            ans += count;
        }

        // Return total negative count
        return ans;
    }

    // Helper function to count negative numbers in a single row
    int countNegative(int[] arr) {

        int n = arr.length;

        // Variable to store count of negative numbers in this row
        int count = 0;

        // Traverse the row
        for (int i = 0; i < n; i++) {

            // Check if the current element is negative
            if (arr[i] < 0) {
                count++;
            }
        }

        // Return count of negatives in this row
        return count;
    }
}



// Approach 2 -  Binary Search (Row-wise)
// T.C - O(m Ã— log n)     -> where m = number of rows in the grid, n = number of columns in the grid
// S.C - O(1)


class Solution {

    public int countNegatives(int[][] grid) {

        int ans = 0;

        // Traverse each row
        for (int[] arr : grid) {
            ans += countNegative(arr);
        }

        return ans;
    }

    // Binary search to find count of negatives in a row
    int countNegative(int[] arr) {

        int n = arr.length;
        int l = 0, r = n - 1;
        int count = n; // default: no negatives

        while (l <= r) {
            int mid = l + (r - l) / 2;

            if (arr[mid] < 0) {
                count = mid; // possible answer
                r = mid - 1;              // search left part
            } else {
                l = mid + 1;              // search right part
            }
        }

        // Count of negatives = total elements - first negative index
        return n - count;
    }
}

